<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_hight_9"
	     >

        <ImageView
            android:id="@+id/image_head"
            android:layout_width="@dimen/image_hight_8"
            android:layout_height="@dimen/image_hight_8"
            android:src="@drawable/f4"
            android:layout_marginTop="@dimen/margin_padding2"
            android:layout_marginBottom="@dimen/margin_padding2"
            android:layout_marginLeft="@dimen/margin_padding4"
            android:layout_marginRight="@dimen/margin_padding4"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/image_head"
            android:layout_marginLeft="@dimen/margin_padding1"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sadfsd"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:textSize="@dimen/textsize6" />
                <ImageView 
                    android:id="@+id/renzheng_ic"
                    android:layout_width="@dimen/image_hight_3"
                    android:layout_height="@dimen/image_hight_3"
                    android:layout_toRightOf="@id/nick_name"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_padding0"
                    android:src="@drawable/ean"/>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="13:23"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black90"
                    android:layout_marginRight="@dimen/margin_padding4"
                    android:textSize="@dimen/textsize5" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/info_num"
                    android:layout_width="@dimen/image_hight_3"
                    android:layout_height="@dimen/image_hight_3"
                    android:layout_margin="@dimen/margin_padding2"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="invisible" />
                <TextView
                    android:id="@+id/msg_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="smsmssm"
                    android:layout_toLeftOf="@id/info_num"
                    android:singleLine="true"
                    android:textColor="@color/black144"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/textsize5" />

                
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>