<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bottom"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/main_bottom"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black40" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_bottom_bar" >

            <RelativeLayout
                android:id="@+id/cd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/message_info"
                    android:layout_width="@dimen/image_hight_9"
                    android:layout_height="@dimen/image_hight_9"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/skin_tab_icon_conversation_selected" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/contact_info"
                    android:layout_width="@dimen/image_hight_9"
                    android:layout_height="@dimen/image_hight_9"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/skin_tab_icon_contact_normal" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cd3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/circle_info"
                    android:layout_width="@dimen/image_hight_9"
                    android:layout_height="@dimen/image_hight_9"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/skin_tab_icon_plugin_normal" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_bottom"
	    android:background="#ebecee"
        android:orientation="horizontal" >
    </LinearLayout>

</RelativeLayout>