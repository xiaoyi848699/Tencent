<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/qq_setting_me_bgmask" >

    <LinearLayout 
        android:id="@+id/top_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
         <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_view_image_width"
            android:gravity="bottom"
            android:layout_marginTop="@dimen/btn_hight_1"
            android:orientation="horizontal">
            <ImageView 
                android:id="@+id/head_image"
                android:layout_width="@dimen/image_hight_10"
                android:layout_height="@dimen/image_hight_10"
                android:layout_marginLeft="@dimen/margin_padding7"
                android:src="@drawable/ic_launcher"/>
            <RelativeLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_padding5">
                <TextView 
                    android:id="@+id/nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="→▆▆▆▆▆▆▆▆▆▆√"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize6"/>
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/margin_padding1"
                    android:layout_below="@id/nickname">
                    
                <ImageView 
                    android:layout_width="@dimen/image_hight_7"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ihf"/>
                <ImageView 
                    android:layout_width="@dimen/image_hight_4"
                    android:layout_height="@dimen/image_hight_4"
                    android:layout_marginLeft="@dimen/margin_padding0"
                    android:src="@drawable/hdr"/>
                <ImageView 
                    android:layout_width="@dimen/image_hight_4"
                    android:layout_height="@dimen/image_hight_4"
                    android:layout_marginLeft="@dimen/margin_padding0"
                    android:src="@drawable/hdr"/>
                <ImageView 
                    android:layout_width="@dimen/image_hight_4"
                    android:layout_height="@dimen/image_hight_4"
                    android:layout_marginLeft="@dimen/margin_padding0"
                    android:src="@drawable/hdr"/>
                <ImageView 
                    android:layout_width="@dimen/image_hight_4"
                    android:layout_height="@dimen/image_hight_4"
                    android:layout_marginLeft="@dimen/margin_padding0"
                    android:src="@drawable/hdu"/>
                <ImageView 
                    android:layout_width="@dimen/image_hight_4"
                    android:layout_height="@dimen/image_hight_4"
                    android:layout_marginLeft="@dimen/margin_padding0"
                    android:src="@drawable/cqu"/>
                    
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_padding7"
            android:src="@drawable/eil"/>
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/white144"
            android:textSize="@dimen/textsize5"
            android:layout_marginLeft="@dimen/margin_padding9"
            android:gravity="center_vertical"
            android:text="“面朝大海，春暖花开”"/>
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_padding7"
            android:src="@drawable/eil"/>
    </LinearLayout>
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/top_info"
        android:orientation="vertical" >
        

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/id_img1"
                android:layout_width="@dimen/image_hight_5"
                android:layout_height="@dimen/image_hight_5"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_padding7"
                android:layout_marginTop="@dimen/margin_padding5"
                android:src="@drawable/qq_setting_huiyuan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_padding7"
                android:layout_toRightOf="@id/id_img1"
                android:text="开通会员"
                android:textColor="#ffffff"
                android:textSize="@dimen/textsize5" />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_padding2"
                android:layout_centerVertical="true"
                android:src="@drawable/dzt"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/id_img2"
                android:layout_width="@dimen/image_hight_5"
                android:layout_height="@dimen/image_hight_5"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_padding7"
                android:layout_marginTop="@dimen/margin_padding5"
                android:src="@drawable/qq_setting_qianbao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_padding7"
                android:layout_toRightOf="@id/id_img2"
                android:text="QQ钱包"
                android:textColor="#ffffff"
                android:textSize="@dimen/textsize5" />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_padding2"
                android:layout_centerVertical="true"
                android:src="@drawable/dzt"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/id_img3"
                android:layout_width="@dimen/image_hight_5"
                android:layout_height="@dimen/image_hight_5"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_padding7"
                android:layout_marginTop="@dimen/margin_padding5"
                android:src="@drawable/qq_setting_business" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_padding7"
                android:layout_toRightOf="@id/id_img3"
                android:text="网上营业厅"
                android:textColor="#ffffff"
                android:textSize="@dimen/textsize5" />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_padding2"
                android:layout_centerVertical="true"
                android:src="@drawable/dzt"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/id_img4"
                android:layout_width="@dimen/image_hight_5"
                android:layout_height="@dimen/image_hight_5"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_padding7"
                android:layout_marginTop="@dimen/margin_padding5"
                android:src="@drawable/qq_setting_zhuangban" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_padding7"
                android:layout_toRightOf="@id/id_img4"
                android:text="个性装扮"
                android:textColor="#ffffff"
                android:textSize="@dimen/textsize5" />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_padding2"
                android:layout_centerVertical="true"
                android:src="@drawable/dzt"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding3" >

            <ImageView
                android:id="@+id/id_img5"
                android:layout_width="@dimen/image_hight_5"
                android:layout_height="@dimen/image_hight_5"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_padding7"
                android:layout_marginTop="@dimen/margin_padding5"
                android:src="@drawable/qq_setting_shoucang" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_padding7"
                android:layout_toRightOf="@id/id_img5"
                android:text="我的收藏"
                android:textColor="#ffffff"
                android:textSize="@dimen/textsize5" />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_padding2"
                android:layout_centerVertical="true"
                android:src="@drawable/dzt"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/id_img1"
                android:layout_width="@dimen/image_hight_5"
                android:layout_height="@dimen/image_hight_5"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_padding7"
                android:layout_marginTop="@dimen/margin_padding5"
                android:src="@drawable/qq_setting_xiangce" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_padding7"
                android:layout_toRightOf="@id/id_img1"
                android:text="我的相册"
                android:textColor="#ffffff"
                android:textSize="@dimen/textsize5" />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_padding2"
                android:layout_centerVertical="true"
                android:src="@drawable/dzt"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/id_img1"
                android:layout_width="@dimen/image_hight_5"
                android:layout_height="@dimen/image_hight_5"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_padding7"
                android:layout_marginTop="@dimen/margin_padding5"
                android:src="@drawable/qq_setting_wenjian" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_padding7"
                android:layout_toRightOf="@id/id_img1"
                android:text="我的文件"
                android:textColor="#ffffff"
                android:textSize="@dimen/textsize5" />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_padding2"
                android:layout_centerVertical="true"
                android:src="@drawable/dzt"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/margin_padding7"
        android:layout_alignParentBottom="true">
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_padding6"
        android:layout_marginRight="@dimen/margin_padding6">
            <ImageView 
                android:id="@+id/set_iv"
                android:layout_width="@dimen/image_hight_5"
                android:layout_height="@dimen/image_hight_5"
                android:src="@drawable/qq_setting_setting"
                android:layout_centerVertical="true"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textColor="@color/white144"
                android:layout_toRightOf="@id/set_iv"
                android:layout_marginLeft="@dimen/margin_padding2"
                android:textSize="@dimen/textsize5"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/hcn"/>
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_padding6"
            android:layout_marginRight="@dimen/margin_padding6">
            <ImageView 
                android:id="@+id/set_iv"
                android:layout_width="@dimen/image_hight_5"
                android:layout_height="@dimen/image_hight_5"
                android:src="@drawable/qq_setting_me_nightmode_off"
                android:layout_centerVertical="true"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="夜间"
                android:textColor="@color/white144"
                android:layout_toRightOf="@id/set_iv"
                android:layout_marginLeft="@dimen/margin_padding2"
                android:textSize="@dimen/textsize5"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>