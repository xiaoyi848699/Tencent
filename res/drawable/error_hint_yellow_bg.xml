<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
     android:shape="rectangle"
     android:useLevel="false" >
     <!-- 填充 -->
   <solid android:color="@color/white" />
   
   <!-- 定义内容离边界的距离。-->       
   <padding   android:left="0px"  android:top="0px" android:bottom="0px" android:right="0px" />
   
  
    <!-- 上 中下颜色的设置-->   
     <gradient
     android:startColor="#fff2bb"
     android:useLevel="false"
     android:type="linear"
     android:angle="90"
     android:endColor="#fff3b7" />
     
     <!-- 边框颜色、宽度-->
    <stroke android:color="@color/black40" 
       android:width="0.1px" />  
       

</shape>
